@model List<CourseEnrollment>

<div class="container pb-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mt-4">@Model.FirstOrDefault()?.Course.Title</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p>List students enrolls</p>
        </div>
        <div class="col-md-12 mt-4 animate__animated animate__fadeInRight">
            <table class="table">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Student.Username</td>
                            <td>@item.Student.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>