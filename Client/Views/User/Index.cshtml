@model List<User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #343a40;
            margin-bottom: 30px;
            text-align: center;
        }

        .btn-success {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #343a40;
            color: #fff;
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        form button[type="submit"] {
            background-color: transparent;
            border: none;
            color: #007bff;
            cursor: pointer;
            transition: color 0.3s;
            margin-right: 5px;
        }

            form button[type="submit"]:hover {
                color: #0056b3;
            }

        .update-btn {
            background-color: transparent;
            border: none;
            color: #28a745;
            cursor: pointer;
            transition: color 0.3s;
        }

            .update-btn:hover {
                color: #218838;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>User List</h1>
        <div class="d-flex justify-content-between align-items-center">
            <h2>My Courses</h2>
            <a href="#" class="btn btn-success" data-toggle="modal" data-target="#addCourseModal">Add Account</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Email</td>
                        <td>@user.Username</td>
                        <td>@user.Role</td>
                        <td>
                            <form asp-controller="User" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="UserId" value="@user.UserId">
                                <button type="submit">Delete</button>
                            </form>
                            <a href="#" class="btn btn-warning" data-toggle="modal" data-target="#updateUserModal-@user.UserId">Edit</a>
                        </td>
                    </tr>
                    <div class="modal fade" id="updateUserModal-@user.UserId" tabindex="-1" role="dialog" aria-labelledby="updateUserModalLabel-@user.UserId" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="updateUserModalLabel-@user.UserId">Update User</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form asp-action="Update" asp-controller="User" method="post">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <div class="form-group">
                                            <label class="form-label">Email</label>
                                            <input type="email" class="form-control" name="email" value="@user.Email" required>
                                        </div>
                                        <div class="form-group">
                                            <label class="form-label">UserName</label>
                                            <textarea class="form-control" name="username" rows="3" required>@user.Username</textarea>
                                        </div>

                                        <input type="hidden" name="password" value="@user.Password" />

                                        <div class="form-group">
                                            <label class="form-label">Role</label>
                                            <select class="form-control" name="role" required>
                                              
                                                <!option value="Lecture" @(user.Role == "Lecture" ? "selected" : "")>Lecture</!option>
                                                <!option value="Student" @(user.Role == "Student" ? "selected" : "")>Student</!option>
                                                <!-- Add more options if needed -->
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>

    <!-- Add Course Modal -->
    <div class="modal fade" id="addCourseModal" tabindex="-1" role="dialog" aria-labelledby="addCourseModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCourseModalLabel">Add Course</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="Add" asp-controller="User" method="post">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="Email" required>
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="username" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" required>
                        </div>
                        <div class="form-group">
                            <label>Role</label>
                            <select id="role" name="Role" class="form-control" required>
                                <option value="Lecture">Lecture</option>
                                <option value="User">User</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
